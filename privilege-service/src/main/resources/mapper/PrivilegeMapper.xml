<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tiger.rbac.privilege.mapper.PrivilegeMapper">
    <resultMap id="privilege" type="com.tiger.rbac.privilege.model.po.Privilege">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="title" property="title"/>
        <result column="path" property="path"/>
        <result column="pid" property="pid"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="mod_time" property="modifiedTime"/>
    </resultMap>

    <select id="selectAll" resultMap="privilege">
        select `id`, `name`, `title`, `path`, `pid`, `description`, `create_time`, `mod_time`
        from `privilege`
    </select>


    <select id="selectById" resultMap="privilege">
        select `id`, `name`, `title`, `path`, `pid`, `description`, `create_time`, `mod_time`
        from `privilege`
        where `id` = #{id}
    </select>


</mapper>