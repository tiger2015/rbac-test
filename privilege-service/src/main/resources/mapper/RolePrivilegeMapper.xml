<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tiger.rbac.privilege.mapper.RolePrivilegeMapper">

    <insert id="insertBatch" parameterType="com.tiger.rbac.privilege.model.po.RolePrivilege">
        insert into role_privilege(`role_id`, `privilege_id`) values
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}, #{item.privilegeId})
        </foreach>
    </insert>

    <delete id="delete">
        delete from role_privilege where `role_id` = #{roleId} and `privilege_id` = #{privilegeId}
    </delete>
</mapper>